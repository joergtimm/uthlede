{% extends 'admin_base.html.twig' %}

{% block title %}Articel{% endblock %}

{% block content %}
    <h1>Articel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ articel.id }}</td>
            </tr>
            <tr>
                <th>Titel</th>
                <td>{{ articel.titel }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ articel.createAt ? articel.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Kurztext</th>
                <td>{{ articel.kurztext }}</td>
            </tr>
            <tr>
                <th>Haupttext</th>
                <td>{{ articel.haupttext }}</td>
            </tr>
            <tr>
                <th>Bild</th>
                <td>{{ articel.bild }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ articel.views }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ articel.datum ? articel.datum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ articel.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_artikel:index') }}">back to list</a>

    <a href="{{ path('admin_artikel:edit', {'id': articel.id}) }}">edit</a>

    {{ include('articel/admin/_delete_form.html.twig') }}
{% endblock %}
