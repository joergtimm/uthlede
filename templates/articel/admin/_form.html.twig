{{ form_start(form) }}
<div class="row">
    <div class="col-12">
        {{ form_row(form.titel) }}
    </div>
</div>
<div class="row">
    <div class="col-12">
        {{ form_row(form.haupttext) }}
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-6">
        {{ form_row(form.bild) }}
        {{ form_row(form.datum) }}
        {{ form_row(form.thema) }}
        {{ form_row(form.author) }}
    </div>
    <div class="col-sm-12 col-md-6">
        <img class="img-fluid" src="{{ articel.imagePath|imagine_filter('actress_thumbnail_md') }}" alt="bild-{{ articel.slug }}" />
    </div>
</div>
<div class="d-flex justify-end">
    <button class="btn btn-success">{{ button_label|default('speichern') }}</button>
</div>

{{ form_end(form) }}
