{% extends 'admin_base.html.twig' %}

{% block title %}Vereine{% endblock %}

{% block content %}
    <h1>Vereine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Beschreibung</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vereine in vereines %}
            <tr>
                <td>{{ vereine.titel }}</td>
                <td>{{ vereine.beschreibung|raw }}</td>
                <td>
                    <a href="{{ path('admin_vereine_show', {'id': vereine.id}) }}">show</a>
                    <a href="{{ path('admin_vereine_edit', {'id': vereine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_vereine_new') }}">Create new</a>
{% endblock %}
