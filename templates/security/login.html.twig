{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
<section class="section-space-bottom mt-5">
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 70px">
            <div class="col-1">

            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-10 col-md-7 col-lg-5 shadow p-3 mb-5 bg-white rounded border">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="form-group" data-controller="form-filler">
                        <h1 class="h3 mb-3 font-weight-normal" style="margin-top: 100px;">Welcome back!</h1>
                        <label for="inputEmail">Username</label>
                        <input
                                type="text"
                                value="{{ last_username }}"
                                data-form-filler-target="input"
                                name="username"
                                id="inputUsername"
                                class="form-control"
                                required autofocus>
                    </div>

                    <div class="form-group mt-3" data-controller="form-filler">
                        <label for="inputPassword">Password</label>
                        <input
                                type="password"
                                data-form-filler-target="input"
                                name="password"
                                id="inputPassword"
                                class="form-control"
                                required
                        >
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="btn btn-lg btn-primary mt-4" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
